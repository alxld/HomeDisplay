<CalendarDayNameTemplate@MDLabel>:
    adaptive_height: True
    halign: 'center'
    valign: 'center'
    padding: [0, 3, 0, 0]
    canvas.before:
        Color:
            rgba: 0.3,0.3,0.3,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.9,0.9,0.9,1
        RoundedRectangle:
            pos: self.x+2, self.y+2
            size: self.width-4, self.height-4

<CalendarScreen>:
    name: 'CalendarScreen'
    id: calendar_screen
    MDBoxLayout:
        orientation: 'horizontal'

        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: 1
                size_hint_y: None
                height: self.minimum_height

                MDIconButton:
                    icon: "refresh"
                    style: 'outlined'
                    on_release: root.update()
                    size_hint_x: None
                    size_hint_y: 1.0
                    width: dp(48)
                    valign: 'center'
                    icon_size: dp(60)
                MDLabel:
                    id: calendar_month_label
                    font_style: 'Display'
                    role: 'large'
                    bold: True
                    text: "MONTH YEAR"
                    halign: 'center'
                    valign: "top"
                    adaptive_size: True
                    size_hint_x: 1.0
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDIconButton:
                    icon: "plus"
                    style: 'outlined'
                    on_release: root.add_event()
                    size_hint_x: None
                    size_hint_y: 1.0
                    width: dp(48)
                    valign: 'center'
                    icon_size: dp(80)
            MDGridLayout:
                id: calendar_day_layout
                rows: 6
                cols: 7

                CalendarDayNameTemplate:
                    text: 'Sunday'
                CalendarDayNameTemplate:
                    text: 'Monday'
                CalendarDayNameTemplate:
                    text: 'Tuesday'
                CalendarDayNameTemplate:
                    text: 'Wednesday'
                CalendarDayNameTemplate:
                    text: 'Thursday'
                CalendarDayNameTemplate:
                    text: 'Friday'
                CalendarDayNameTemplate:
                    text: 'Saturday'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            MDLabel:
                font_style: 'Display'
                role: 'large'
                bold: True
                text: 'Lists'
                halign: 'center'
                valign: "top"
                adaptive_size: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDBoxLayout:
                id: calendar_list_layout
                orientation: 'vertical'

<CalendarDayPastMonth@CalendarDayOtherMonthBase>:
    canvas.after:
        Color:
            rgba: 0.25,0.25,0.75,0.4
        Line:
            points: self.x+7, self.y+7, self.x+self.width-7, self.y+self.height-7
            width: 5

<CalendarDayFutureMonth@CalendarDayOtherMonthBase>:

<CalendarDay@CalendarDayBase>:
    canvas:
        Color:
            rgba: 0.3,0.3,0.3,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.x+2, self.y+2
            size: self.width-4, self.height-4

<CalendarDayOtherMonthBase@CalendarDayBase>:
    canvas:
        Color:
            rgba: 0.3,0.3,0.3,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.90,0.90,0.90,1
        RoundedRectangle:
            pos: self.x+2, self.y+2
            size: self.width-4, self.height-4

<CalendarDayBase>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            MDIconButton:
                size_hint_x: 0.8
            MDLabel:
                id: calendar_day_number_label
                text: "EMPTY"
                halign: 'center'
                font_style: 'Title'
                valign: "top"
                adaptive_size: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.2
        MDBoxLayout:
            id: calendar_day_content_layout
            orientation: 'vertical'
            size_hint_y: 0.8

<Bullet>:
    canvas:
        Color:
            rgba: 0.35,0.35,0.35,1
        Ellipse:
            pos: self.center_x - 3, self.center_y - 3
            size: 6, 6
            
<CalendarItem@MDLabel>:
    font_style: "Body"
    role: "small"
    adaptive_height: True
    markup: True
    padding: 3, 0, 7, 0

#        MDLabel:
#            id: calendar_day_contents_label
#            padding_x: 5
#            font_style: "Body"
#            role: "small"
#            text: "Tasks"

<CalendarDayPast@CalendarDay>:
    canvas:
        Color:
            rgba: 0.25,0.25,0.75,0.2
        Line:
            points: self.x+7, self.y+7, self.x+self.width-7, self.y+self.height-7
            width: 5

<ListBox>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.x+2, self.y+2
            size: self.width-4, self.height-4
            
    MDBoxLayout:
        padding: dp(5), dp(5)
        orientation: 'vertical'
        MDBoxLayout:
            #size_hint_y: 0.2
            adaptive_height: True
            padding: [0,3,0,0]
            orientation: 'horizontal'
            MDLabel:
                id: list_box_name_label
                font_style: 'Title'
                text: "EMPTY"
                #adaptive_width: True
                halign: "left"
                valign: "center"
                pos_hint: {'left_x': 0.0, 'center_y': 0.5}
                size_hint_x: 0.7
            MDButton:
                #size_hint_x: 0.2
                #size_hint_y: 0.2
                style: 'elevated'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDButtonIcon:
                    icon: "refresh"
                MDButtonText:
        MDScrollView:
            do_scroll_x: False
            bar_width: 10
            scroll_type: ['bars', 'content']
            MDList:
                id: list_box_list

<ListBoxItem@MDListItem>:
    height: dp(32)
    MDListItemHeadlineText:
        text: "Empty"
        id: item_text
    MDListItemTrailingCheckbox:
        id: item_cb
